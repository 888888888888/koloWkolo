<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Menu">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kvk"
        android:textSize="90sp"
        android:id="@+id/textPlayer"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_below="@id/textPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:id="@+id/editPlayer"
        />

    <Button
        android:layout_below="@id/editPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="setPlayer"
        android:visibility="invisible"
        android:id="@+id/buttonPleyer"/>
    <!-- android:background="@drawable/button_selector" -->
</RelativeLayout>
